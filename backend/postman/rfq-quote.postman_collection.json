{
  "info": {
    "name": "Frethan - RFQ & Quote",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "url": { "raw": "{{baseUrl}}/api/health", "host": ["{{baseUrl}}"], "path": ["api", "health"] }
      }
    },
    {
      "name": "Create RFQ",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"buyerId\": {{buyerId}},\n  \"currency\": \"AUD\",\n  \"notes\": \"Test RFQ\",\n  \"items\": [\n    {\n      \"description\": \"Steel rods\",\n      \"quantity\": 10,\n      \"unit\": \"pcs\"\n    }\n  ]\n}"
        },
        "url": { "raw": "{{baseUrl}}/api/rfqs", "host": ["{{baseUrl}}"], "path": ["api", "rfqs"] }
      }
    },
    {
      "name": "List RFQs",
      "request": {
        "method": "GET",
        "url": { "raw": "{{baseUrl}}/api/rfqs", "host": ["{{baseUrl}}"], "path": ["api", "rfqs"] }
      }
    }
  ]
}
