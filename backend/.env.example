# Required
DATABASE_URL=postgresql://postgres:postgres@localhost:55432/frethan_db?schema=public
JWT_SECRET=dev-secret-change-me

# Optional (Auth)
JWT_EXPIRES_IN=7d
FRONTEND_OAUTH_REDIRECT=http://localhost:5173/oauth/callback
FRONTEND_LINKED_ACCOUNTS_REDIRECT=http://localhost:5173/settings/linked-accounts

# Optional (Server)
PORT=5000
NODE_ENV=development

# Optional (OAuth providers)
# If you want to use Google OAuth, you must set GOOGLE_CLIENT_ID and GOOGLE_CLIENT_SECRET.
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/google/callback
# GOOGLE_SCOPES=openid,email,profile
#
# If you want to use Facebook OAuth, you must set FACEBOOK_APP_ID and FACEBOOK_APP_SECRET.
# FACEBOOK_APP_ID=
# FACEBOOK_APP_SECRET=
# FACEBOOK_REDIRECT_URI=http://localhost:5000/api/auth/facebook/callback
# FACEBOOK_SCOPES=email,public_profile

# Optional (WeChat demo)
# When true, GET /api/auth/wechat runs a simulated QR demo flow.
WECHAT_DEMO_MODE=true
